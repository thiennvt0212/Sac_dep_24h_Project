// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  email       String   @unique
  password    String
  name        String?

  // Danh sách ID sản phẩm yêu thích
  favoriteIds String[] @db.ObjectId
  // Quan hệ: User -> Product (yêu thích)
  favorites   Product[] @relation(fields: [favoriteIds], references: [id])

  // Giỏ hàng
  cartItems   CartItem[]
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       Float
  image       String?
  description String?

  // Danh sách ID người dùng yêu thích sản phẩm này
  favoritedByUserIds String[] @db.ObjectId
  // Quan hệ ngược: Product -> User (ai yêu thích sản phẩm này)
  favoritedBy User[] @relation(fields: [favoritedByUserIds], references: [id])

  // Giỏ hàng
  cartItems   CartItem[]
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  productId String   @db.ObjectId
  quantity  Int      @default(1)

  @@unique([userId, productId])
}
model Blog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  type        String   // ví dụ: 'cbd pastries', 'skincare tips', v.v.
  date        String   // hoặc DateTime nếu bạn muốn
  createdAt   DateTime @default(now())


}